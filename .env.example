# ----------------------
# Node environment --- development, production, test
# ----------------------
NODE_ENV=development

# ----------------------
# Database configuration
# ----------------------
DB_HOST=host
DB_USER=username
DB_PASS=password
DB_NAME=app_db
DB_DIALECT=postgres

# ----------------------
# Email configuration
# ----------------------
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=XXXX
SMTP_PASS=XXXX

# ----------------------
# App port
# ----------------------
APP_PORT=9000

# ----------------------
# Terraform / AWS configuration
# ----------------------
AWS_ACCESS_KEY_ID=XXXX
AWS_SECRET_ACCESS_KEY=XXXX
AWS_SESSION_TOKEN=XXXX       # optional, only needed for temporary credentials
AWS_REGION=XXXX

# Terraform module variables
TF_VAR_subnet_id=XXXX        # e.g., subnet-0abc123456789def0
TF_VAR_dfm_ami=XXXX          # e.g., ami-0e48bf3a4f92e663d
